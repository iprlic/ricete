<p id="notice"><%= notice %></p>

<h1>Measurments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurment| %>
      <tr>
        <td><%= measurment.name %></td>
        <td><%= measurment.description %></td>
        <td><%= link_to 'Show', measurment %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurment) %></td>
        <td><%= link_to 'Destroy', measurment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

